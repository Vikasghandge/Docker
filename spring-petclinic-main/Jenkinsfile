pipeline {
  agent any
  stages {
    stage('Maven Install') {
      agent {
        docker {
          image 'maven:3.8.6-openjdk'  // Use the verified Maven image
        }
      }
      steps {
        dir('spring-petclinic-main') {
          sh 'mvn clean install'
        }
      }
    }
    stage('Docker Build') {
      agent any
      steps {
        dir('spring-petclinic-main') {
          sh 'docker build -t vikasghandge/spring-petclinic:latest .'
        }
      }
    }
  }
}
