pipeline {
  agent any
  stages {
    stage('Checkout SCM') {
      steps {
        checkout scm
      }
    }
    stage('Maven Install') {
      steps {
        script {
          // Navigate to the directory containing pom.xml and run Maven
          dir('spring-petclinic-main') {
            sh 'mvn clean install'
          }
        }
      }
    }
    stage('Docker Build') {
      steps {
        script {
          // Build Docker image in the correct directory
          dir('spring-petclinic-main') {
            sh 'docker build -t vikasghandge/spring-petclinic:latest .'
          }
        }
      }
    }
  }
}

