pipeline {
  agent any
  stages {
    stage('Maven Install') {
      steps {
        dir('spring-petclinic-main') {
          sh 'mvn clean install'
        }
      }
    }
    stage('Docker Build') {
      steps {
        dir('spring-petclinic-main') {
          sh 'docker build -t vikasghandge/spring-petclinic:latest .'
        }
      }
    }
  }
}
